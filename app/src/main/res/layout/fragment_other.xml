<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/small_padding"
        android:paddingEnd="@dimen/small_padding">

        <TextView
            android:id="@+id/RuangLes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/small_padding"
            android:paddingBottom="@dimen/small_padding"
            android:text="Lainnya"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="3" />

            <android.support.v7.widget.CardView
                android:id="@+id/filemanager_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:elevation="5dp"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="295dp"
                    android:layout_height="46dp">

                    <ImageView
                        android:id="@+id/filemanager"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="2dp"
                        android:contentDescription="managerfile"
                        android:focusableInTouchMode="true"
                        android:src="@drawable/ic_file_download_black_24dp" />

                    <TextView
                        android:id="@+id/content_jamin"
                        android:layout_width="176dp"
                        android:layout_height="29dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="8dp"
                        android:layout_toEndOf="@+id/filemanager"
                        android:paddingStart="5dp"
                        android:text="File Manager"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/pengaturan_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:elevation="5dp"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="295dp"
                    android:layout_height="46dp">

                    <ImageView
                        android:id="@+id/settingan"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="2dp"
                        android:contentDescription="managerfile"
                        android:focusableInTouchMode="true"
                        android:src="@drawable/ic_settings_black_24dp" />

                    <TextView
                        android:id="@+id/pengaturan"
                        android:layout_width="176dp"
                        android:layout_height="29dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="8dp"
                        android:layout_toEndOf="@+id/settingan"
                        android:paddingStart="5dp"
                        android:text="Pengaturan"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/bantuan_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:elevation="5dp"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="295dp"
                    android:layout_height="46dp">

                    <ImageView
                        android:id="@+id/bantuan"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="2dp"
                        android:contentDescription="managerfile"
                        android:focusableInTouchMode="true"
                        android:src="@drawable/ic_help_black_24dp" />

                    <TextView
                        android:id="@+id/help"
                        android:layout_width="176dp"
                        android:layout_height="29dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="8dp"
                        android:layout_toEndOf="@+id/bantuan"
                        android:paddingStart="5dp"
                        android:text="Bantuan"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/about_card"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:elevation="5dp"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="295dp"
                    android:layout_height="46dp">

                    <ImageView
                        android:id="@+id/about"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="2dp"
                        android:contentDescription="managerfile"
                        android:focusableInTouchMode="true"
                        android:src="@drawable/ic_info_black_24dp" />

                    <TextView
                        android:id="@+id/tentangkami"
                        android:layout_width="176dp"
                        android:layout_height="29dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="8dp"
                        android:layout_toEndOf="@+id/about"
                        android:paddingStart="5dp"
                        android:text="Tentang Kami"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logout" />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>